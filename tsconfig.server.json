{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["glasses-integration/**/*"],
  "exclude": ["node_modules"]
} 